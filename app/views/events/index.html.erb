<div class="container">
  <div class="text-center">
    <div class="btn btn-cards mt-3"><%= link_to "EvÃ¨nements", events_path, class: "text-light"%></div>
    <div class="btn btn-cards mt-3"><%= link_to "Map", events_path, class: "text-light" %></div>
  </div>
  <p>
    <a class="btn btn-primary" data-bs-toggle="collapse" href="#collapseExample" role="button" aria-expanded="false" aria-controls="collapseExample">
      search
    </a>
  </p>
  <div class="collapse" id="collapseExample">
    <div class="card card-body">
      <%= form_with url: events_path, method: :get, class: "d-flex" do %>
        <%= text_field_tag :query,
          params[:query],
          class: "form-control",
          placeholder: "Find an event"
        %>
        <%= submit_tag "Search", class: "btn btn-primary" %>
      <% end %>
    </div>
  </div>

  <div>
    <% @events.each do |event| %>
      <div class="margin">
        <%= link_to event_path(event) do %>
          <div class="card-trip radius h-25 mt-3 mb-4">
            <%= cl_image_tag event.photo.key, height: 150, class: "w-100 object-fit-cover" %>
            <div class="card-trip-infos">
              <div class="overflow-text">
                <h2 class="text-center mb-3"><%= event.title %></h2>
                <div class="d-flex">
                  <span class="color-font m-auto w-10"><%= event.date %></span>
                  <span class="color-font m-auto w-10"><%= event.location %></span>
                </div>
                <p class="text-center m-auto pt-2 width overflow-scroll"><%= event.description %></p>
                <div class="text-center mt-2">
                  <div class="btn btn-cards"><%= link_to "Partager", events_path, class: "text-light m-0 p-0" %></div>
                </div>

              </div>
              <img src="https://kitt.lewagon.com/placeholder/users/krokrob" class="card-trip-user avatar-bordered" />
            </div>
          </div>
        <% end %>
      </div>
    <% end %>
  </div>
</div>
