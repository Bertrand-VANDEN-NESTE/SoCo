


<div class="container">
  <div class="row justify-content-evenly ms-5 me-5">
    <% @events.each do |event| %>
      <div class="profile col-6 mb-4 ms-4 me-4 ">
        <a href="<%= event_path(event)%>">
          <% if event.photo.attached? %>
          <%= cl_image_tag event.photo.key, height: 200, width: 200, crop: :fill, class: "margin-center profile-image" %>
          <% end %>
          <div class="card-body">
            <h5 class="card-title text-center font-weight-bold mt-3"><%= link_to event.name, event_path(event), class: "text-deco"%></h5>

            <p class="card-text text-light text-center"> <%= event.title %> </p>
            <p class="card-text text-light text-center"> <%= event.description %> </p>
            <div class="text-center">
            </div>
          </div>
        </a>
      </div>
    <% end %>
  </div>
