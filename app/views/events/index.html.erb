<div class="container">
  <div class="text-center">
    <div class="btn btn-cards mt-3"><%= link_to "EvÃ¨nements", events_path, class: "text-light"%></div>
    <div class="btn btn-cards mt-3"><%= link_to "Map", events_path, class: "text-light" %></div>
  </div>
  <% @events.each do |event| %>
    <div class="margin mb-3">
      <%= link_to event_path(event) do %>
        <div class="card-trip radius h-25 mt-5">
          <%= cl_image_tag event.photo.key, height: 200, class: "w-100 object-fit-cover" %>
          <div class="card-trip-infos">
            <div class="overflow-text">
              <h2 class="text-center mb-3"><%= event.title %></h2>
              <div class="d-flex">
                <span class="card-trip-pricing color-font w-10 mb-3"><%= event.date %></span>
                <span class="card-trip-pricing color-font w-10 mb-3"><%= event.location %></span>
              </div>
              <p class="text-center width overflow-scroll"><%= event.description %></p>
              <div class="text-center mt-2">
                <div class="btn btn-cards"><%= link_to "Partager", events_path, class: "text-light m-0 p-0" %></div>
              </div>
            </div>
            <img src="https://kitt.lewagon.com/placeholder/users/krokrob" class="card-trip-user avatar-bordered" />
          </div>
        </div>
      <% end %>
    </div>
  <% end %>
</div>
