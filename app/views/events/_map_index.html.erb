<div class="container">
  <div class="card-trip-map margin">
    <div style="width: 100%; height: 80vh;"
      data-controller="mapindex"
      data-mapindex-markers-value="<%= @markers.to_json %>"
      data-mapindex-api-key-value="<%= ENV['MAPBOX_API_KEY'] %>">
    </div>
    <div>
    <% @events.first(5).each do |event| %>
      <div class="margin">
        <%= link_to event_path(event) do %>
          <div class="card-trip radius h-25 mt-2 mb-2 ms-2 me-2">
            <div class="card-trip-infos">
              <div class="overflow-text">
                <div class="d-flex align-items-center">
                  <%= cl_image_tag event.user.photo.key,class: "avatar-bordered" %>
                  <h2 class="text-center mb-3 width-titre-map"><%= event.title %></h2>
                </div>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    <% end %>
  </div>
  </div>
</div>
