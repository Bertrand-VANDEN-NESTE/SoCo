<div class="container">
  <%= simple_form_for(@event) do |f| %>
    <%= f.input :title %>
    <%= f.input :date %>
    <%= f.input :location %>
    <%= f.input :description %>
    <%= f.input :capacity %>
    <%= f.input :tricount, input_html: {value: "https://www.tricount.com/fr/creer-des-comptes-nouveau-tricount"} %>
    <%= f.input :status %>
    <%= f.input :password %>
    <%= f.input :photo, as: :file %>
    <div class="text-center pb-5">
      <%= f.submit value: "Ajouter", class:"btn btn-cards mb-2 text-light" %>
    </div>
  <% end %>
</div>
